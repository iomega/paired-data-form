{
  "name": "podp-api",
  "version": "0.7.0",
  "description": "",
  "license": "Apache-2.0",
  "scripts": {
    "start": "npm run waiton:elastic && npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node --unhandled-rejections=strict dist/server.js",
    "waiton:elastic": "wait-on -t 30000 ${ELASTICSEARCH_URL:-http://localhost:9200}",
    "watch-node": "nodemon -i data dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon -i data --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "schema2ts": "json2ts --input ../app/public/schema.json --output src/schema.ts --style.singleQuote",
    "enrich": "node dist/cli.js enrich",
    "validate": "node dist/cli.js validate",
    "validateall": "find ${DATADIR:-data}/approved ${DATADIR:-data}/pending -type f -exec node dist/cli.js validate {} \\;",
    "migrate": "node dist/cli.js migrate",
    "publish2zenodo": "node dist/cli.js publish2zenodo"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.6.1",
    "@iomeg/zenodo-upload": "0.5.0",
    "@keyv/redis": "^1.3.8",
    "@types/swagger-ui-dist": "^3.0.5",
    "ajv": "^6.10.0",
    "archiver": "^3.1.1",
    "async": "^2.6.0",
    "bcrypt-nodejs": "^0.0.3",
    "bull": "^3.10.0",
    "compression": "^1.7.1",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "express-async-handler": "^1.1.4",
    "form-data": "^3.0.0",
    "ioredis": "^4.9.5",
    "jsdom": "^16.2.0",
    "keyv": "^3.1.0",
    "lusca": "^1.5.2",
    "node-fetch": "^2.6.1",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.0",
    "sitemap": "^6.2.0",
    "swagger-ui-dist": "^3.25.0",
    "tmp-promise": "^2.0.2",
    "umzug": "^2.2.0",
    "uuid": "^3.3.2",
    "wait-on": "^4.0.2",
    "winston": "^2.4.0",
    "yargs": "^13.2.4"
  },
  "devDependencies": {
    "@types/archiver": "^3.1.0",
    "@types/async": "^2.0.45",
    "@types/bcrypt-nodejs": "^0.0.30",
    "@types/bluebird": "^3.5.20",
    "@types/body-parser": "^1.16.8",
    "@types/bull": "^3.5.14",
    "@types/compression": "^0.0.35",
    "@types/dotenv": "^4.0.2",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.11.1",
    "@types/ioredis": "^4.0.11",
    "@types/jest": "^25.1.4",
    "@types/keyv": "^3.1.0",
    "@types/lusca": "^1.5.0",
    "@types/node": "^12.0.0",
    "@types/node-fetch": "^2.5.5",
    "@types/passport": "^0.4.3",
    "@types/passport-http-bearer": "^1.0.32",
    "@types/rimraf": "^2.0.2",
    "@types/supertest": "^2.0.8",
    "@types/tmp": "^0.1.0",
    "@types/umzug": "^2.2.3",
    "@types/unzipper": "^0.10.2",
    "@types/uuid": "^3.4.4",
    "@types/xml2js": "^0.4.5",
    "@types/yargs": "^13.0.0",
    "concurrently": "^3.6.1",
    "jest": "^25.2.4",
